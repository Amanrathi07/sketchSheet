datasource db {
  provider = "postgresql"
}
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}



model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  rooms    Room[]    
  messages Message[]
}

model Room {
  id       Int    @id @default(autoincrement())
  name     String @unique
  adminId  String
  adminRel User      @relation(fields: [adminId], references: [id])
  messages Message[]
}

model Message {
  id        Int   @id @default(autoincrement())
  message   String
  senderId  String
  senderRel User     @relation(fields: [senderId], references: [id])
  roomId    Int
  roomRel   Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
}
